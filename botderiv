GRANULARITY = 60
STAKE = 1.0
DURATION_MIN = 1
MAX_RETRIES = 3
MAX_CONCURRENT_SYMBOLS = 2
IA_TIMEOUT_S = 10
IA_TIMEOUT_INCREMENT = 5
IA_MAX_RETRIES = 3
IA_MODEL = "llama3"

